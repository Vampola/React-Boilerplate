{
    "extends": [
        "airbnb", 
        "eslint:recommended", 
        "plugin:react/recommended"
    ],
    "parser": 
        "babel-eslint",
    "plugins": [
        "react"
    ],
    "rules": {
        "react/jsx-filename-extension": [1, { "extensions": [".js", ".jsx"] }],
        "jsx-a11y/anchor-is-valid": [ "error", { "components": [ "Link" ], "specialLink": [ "to" ] } ]
    },
    "globals": {
    "document": false
  }
}